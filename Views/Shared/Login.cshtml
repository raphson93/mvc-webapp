<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Call Log App</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-4.5.2-dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/fonts/fontawesome-free-5.14.0-web/css/all.css" />
    <script type="text/javascript" src="~/lib/jquery/jquery-3.5.1.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap-4.5.2-dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/js/moment.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <!--<a class="navbar-brand" href="https://d16s43kltl8oev.cloudfront.net/">Call Log App<div id="time"></div></a>-->
                <a class="nav-link text-dark" asp-area="" asp-controller="Reports" asp-action="Index">Call Log App<div id="time"></div></a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script>
        function updateClock() {
            var now = moment().format('DD/MM/YYYY') + " " + moment().format("HH:mm:ss"); // current date
            //months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'] // you get the idea
            //time = now.getHours() + ':' + now.getMinutes(), // again, you get the idea

            // a cleaner way than string concatenation
            //date = [now.getDate(),
            //months[now.getMonth()],
            //now.getFullYear()].join(' ');

            // set the content of the element with the ID time to the formatted string
            //document.getElementById('time').innerHTML = [date, time].join(' / ');
            document.getElementById('time').innerHTML = now;
            // call this function again in 1000ms
            setTimeout(updateClock, 1000);
        }
        updateClock(); // initial call
    </script>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Call Log App
        </div>
    </footer>
</body>
</html>
